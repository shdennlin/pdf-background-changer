{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // Make sure module and moduleResolution match
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "lib": ["ESNext", "DOM"],
    "allowImportingTsExtensions": true
  },
  "include": ["src/**/*.ts"],
  "references": [
    { "path": "../lib" }
  ]
}